/* BloodLink - Global Styles */

* {
  margin: 0;
  padding: 0;
  box-sizing: border-box;
}

:root {
  /* Brand Colors */
  --primary-color: #dc2626;
  --secondary-color: #991b1b;
  --success-color: #16a34a;
  --warning-color: #ca8a04;
  --danger-color: #dc2626;

  /* Light Mode Colors */
  --bg-primary: #ffffff;
  --bg-secondary: #f3f4f6;
  --bg-tertiary: #fef2f2;
  --text-primary: #111827;
  --text-secondary: #6b7280;
  --text-tertiary: #9ca3af;
  --border-color: #e5e7eb;
  --navbar-bg: rgba(255, 255, 255, 0.95);
  --card-bg: rgba(255, 255, 255, 0.9);
  --glass-bg: rgba(255, 255, 255, 0.8);

  /* Shadows */
  --shadow: 0 1px 3px 0 rgba(0, 0, 0, 0.1);
  --shadow-lg: 0 10px 15px -3px rgba(0, 0, 0, 0.1);
  --shadow-xl: 0 20px 25px -5px rgba(0, 0, 0, 0.1);

  /* Legacy */
  --dark: #1f2937;
  --light: #f3f4f6;
  --white: #ffffff;
  --text-dark: #111827;
  --text-light: #6b7280;
}

/* Dark Mode Colors */
.dark-mode {
  --bg-primary: #0f172a;
  --bg-secondary: #1e293b;
  --bg-tertiary: #334155;
  --text-primary: #f1f5f9;
  --text-secondary: #cbd5e1;
  --text-tertiary: #94a3b8;
  --border-color: #334155;
  --navbar-bg: rgba(15, 23, 42, 0.95);
  --card-bg: rgba(30, 41, 59, 0.9);
  --glass-bg: rgba(30, 41, 59, 0.8);
  --shadow: 0 1px 3px 0 rgba(0, 0, 0, 0.3);
  --shadow-lg: 0 10px 15px -3px rgba(0, 0, 0, 0.5);
  --shadow-xl: 0 20px 25px -5px rgba(0, 0, 0, 0.6);

  /* Legacy (for backwards compatibility) */
  --text-dark: #f1f5f9;
  --text-light: #cbd5e1;
}

body {
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', 'Roboto', 'Oxygen',
    'Ubuntu', 'Cantarell', 'Fira Sans', 'Droid Sans', 'Helvetica Neue',
    sans-serif;
  -webkit-font-smoothing: antialiased;
  -moz-osx-font-smoothing: grayscale;
  color: var(--text-primary);
  background-color: var(--bg-secondary);
  line-height: 1.6;
  transition: background-color 0.3s ease, color 0.3s ease;
}

.app {
  min-height: 100vh;
  display: flex;
  flex-direction: column;
}

.main-content {
  flex: 1;
  padding-top: 75px;
}

@media (min-width: 1024px) {
  .main-content {
    padding-top: 90px;
  }
}

.container {
  max-width: 1200px;
  margin: 0 auto;
  padding: 0 20px;
}

/* ========================================
   OLD NAVBAR STYLES MOVED TO navbar.css
   ======================================== */

.navbar::before {
  content: '';
  position: absolute;
  inset: 0;
  background: var(--navbar-bg);
  backdrop-filter: blur(20px) saturate(180%);
  -webkit-backdrop-filter: blur(20px) saturate(180%);
  border-bottom: 1px solid var(--border-color);
  box-shadow: var(--shadow);
  transition: all 0.3s ease;
  z-index: -1;
}

/* Dark Mode Navbar */
.dark-mode .navbar::before {
  background: rgba(15, 23, 42, 0.8);
  border-bottom: 1px solid rgba(255, 255, 255, 0.1);
  box-shadow: 0 4px 24px rgba(0, 0, 0, 0.4);
}

/* Floating Navbar on Desktop */
@media (min-width: 1024px) {
  .navbar {
    padding: 1rem;
  }

  .navbar::before {
    inset: 0.5rem 2rem;
    border-radius: 16px;
    border: 1px solid var(--border-color);
    border-bottom: 1px solid var(--border-color);
  }

  .dark-mode .navbar::before {
    border: 1px solid rgba(255, 255, 255, 0.1);
  }
}

.navbar-container {
  max-width: 1400px;
  margin: 0 auto;
  padding: 0 1rem;
  display: flex;
  align-items: center;
  justify-content: space-between;
  min-height: 60px;
  position: relative;
  z-index: 1;
}

@media (min-width: 1024px) {
  .navbar-container {
    padding: 0 1.5rem;
  }
}

/* Logo */
.navbar-logo {
  display: flex;
  align-items: center;
  gap: 0.75rem;
  text-decoration: none;
  color: var(--text-primary);
  font-weight: 700;
  font-size: 1.5rem;
  transition: all 0.2s ease;
  z-index: 1001;
}

.navbar-logo:hover {
  transform: scale(1.05);
  opacity: 0.8;
}

.logo-icon {
  width: 40px;
  height: 40px;
  background: linear-gradient(135deg, var(--primary-color), var(--secondary-color));
  border-radius: 12px;
  display: flex;
  align-items: center;
  justify-content: center;
  color: white;
  box-shadow: 0 4px 12px rgba(220, 38, 38, 0.3);
}

.logo-text {
  background: linear-gradient(135deg, var(--primary-color), var(--secondary-color));
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
}

/* Desktop Navigation Menu */
.navbar-menu {
  display: flex;
  align-items: center;
  gap: 2rem;
  flex: 1;
  justify-content: flex-end;
}

.navbar-links {
  display: flex;
  align-items: center;
  gap: 0.25rem;
}

/* Nav Links - React Bits Style with Better Visibility */
.nav-link {
  display: flex;
  align-items: center;
  gap: 0.5rem;
  padding: 0.625rem 1rem;
  border-radius: 10px;
  color: var(--text-secondary);
  text-decoration: none;
  font-weight: 500;
  font-size: 0.9rem;
  transition: all 0.2s cubic-bezier(0.4, 0, 0.2, 1);
  white-space: nowrap;
  position: relative;
  background: transparent;
  border: 1px solid transparent;
}

.nav-link:hover {
  background: rgba(220, 38, 38, 0.08);
  color: var(--primary-color);
  transform: translateY(-1px);
  border-color: rgba(220, 38, 38, 0.1);
}

.dark-mode .nav-link {
  color: var(--text-secondary);
}

.dark-mode .nav-link:hover {
  background: rgba(220, 38, 38, 0.15);
  color: #fca5a5;
  border-color: rgba(220, 38, 38, 0.2);
}

.nav-link.active {
  background: linear-gradient(135deg, rgba(220, 38, 38, 0.1), rgba(220, 38, 38, 0.05));
  color: var(--primary-color);
  font-weight: 600;
  border-color: rgba(220, 38, 38, 0.2);
}

.dark-mode .nav-link.active {
  background: linear-gradient(135deg, rgba(220, 38, 38, 0.2), rgba(220, 38, 38, 0.1));
  color: #fca5a5;
  border-color: rgba(220, 38, 38, 0.3);
}

.nav-link-underline {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  height: 2px;
  background: linear-gradient(135deg, var(--primary-color), var(--secondary-color));
  border-radius: 2px;
}

/* Navbar Actions */
.navbar-actions {
  display: flex;
  align-items: center;
  gap: 1rem;
  margin-left: 1rem;
}

/* Dark Mode Toggle */
.dark-mode-toggle {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 40px;
  height: 40px;
  border-radius: 10px;
  border: none;
  background: var(--glass-bg);
  border: 1px solid var(--border-color);
  color: var(--text-primary);
  cursor: pointer;
  transition: all 0.2s ease;
  box-shadow: var(--shadow);
}

.dark-mode-toggle:hover {
  background: var(--card-bg);
  border-color: var(--primary-color);
  color: var(--primary-color);
  transform: translateY(-2px);
  box-shadow: var(--shadow-lg);
}

/* User Profile */
.user-profile {
  display: flex;
  align-items: center;
  gap: 0.75rem;
  padding: 0.5rem 1rem;
  border-radius: 10px;
  text-decoration: none;
  background: var(--glass-bg);
  border: 1px solid var(--border-color);
  transition: all 0.2s ease;
}

.user-profile:hover {
  background: var(--card-bg);
  transform: translateY(-1px);
  box-shadow: var(--shadow);
}

.dark-mode .user-profile {
  background: rgba(255, 255, 255, 0.05);
  border: 1px solid rgba(255, 255, 255, 0.1);
}

.dark-mode .user-profile:hover {
  background: rgba(255, 255, 255, 0.08);
  border-color: rgba(220, 38, 38, 0.3);
}

.user-avatar {
  width: 36px;
  height: 36px;
  border-radius: 50%;
  background: linear-gradient(135deg, #f87171, var(--primary-color));
  display: flex;
  align-items: center;
  justify-content: center;
  color: white;
  font-weight: 600;
  font-size: 0.9rem;
  box-shadow: 0 2px 8px rgba(220, 38, 38, 0.2);
}

.user-info {
  display: flex;
  flex-direction: column;
  gap: 0.125rem;
}

.user-name {
  font-weight: 600;
  font-size: 0.9rem;
  color: var(--text-primary);
  transition: color 0.3s ease;
}

.user-role {
  font-size: 0.75rem;
  color: var(--text-secondary);
  text-transform: capitalize;
  transition: color 0.3s ease;
}

/* Buttons */
.btn-nav {
  padding: 0.625rem 1.25rem;
  border-radius: 8px;
  font-weight: 600;
  font-size: 0.9rem;
  text-decoration: none;
  transition: all 0.2s ease;
  border: none;
  cursor: pointer;
  display: inline-block;
}

.btn-nav.btn-primary {
  background: linear-gradient(135deg, var(--primary-color), var(--secondary-color));
  color: white;
  box-shadow: 0 2px 8px rgba(220, 38, 38, 0.25);
}

.btn-nav.btn-primary:hover {
  transform: translateY(-2px);
  box-shadow: 0 4px 12px rgba(220, 38, 38, 0.35);
}

.btn-nav.btn-secondary {
  background: var(--glass-bg);
  color: var(--text-primary);
  border: 1px solid var(--border-color);
}

.dark-mode .btn-nav.btn-secondary {
  background: rgba(255, 255, 255, 0.05);
  color: var(--text-primary);
  border: 1px solid rgba(255, 255, 255, 0.1);
}

.btn-nav.btn-secondary:hover {
  background: var(--card-bg);
  transform: translateY(-2px);
  border-color: var(--primary-color);
}

.dark-mode .btn-nav.btn-secondary:hover {
  background: rgba(255, 255, 255, 0.1);
  border-color: var(--primary-color);
}

.btn-logout {
  display: flex;
  align-items: center;
  gap: 0.5rem;
  padding: 0.625rem 1rem;
  border: 1px solid transparent;
  border-radius: 8px;
  background: transparent;
  color: var(--text-primary);
  font-weight: 500;
  font-size: 0.9rem;
  cursor: pointer;
  transition: all 0.2s ease;
}

.btn-logout:hover {
  background: rgba(220, 38, 38, 0.08);
  color: var(--primary-color);
  border-color: rgba(220, 38, 38, 0.1);
}

.dark-mode .btn-logout:hover {
  background: rgba(220, 38, 38, 0.15);
  color: #fca5a5;
  border-color: rgba(220, 38, 38, 0.2);
}

/* Mobile Menu Toggle */
.mobile-menu-toggle {
  display: none;
  align-items: center;
  justify-content: center;
  width: 44px;
  height: 44px;
  border: 1px solid transparent;
  border-radius: 10px;
  background: transparent;
  color: var(--text-primary);
  cursor: pointer;
  transition: all 0.2s ease;
  z-index: 1001;
}

.mobile-menu-toggle:hover {
  background: var(--glass-bg);
  border-color: var(--border-color);
}

.dark-mode .mobile-menu-toggle:hover {
  background: rgba(255, 255, 255, 0.05);
  border-color: rgba(255, 255, 255, 0.1);
}

.mobile-menu-toggle.active {
  background: rgba(220, 38, 38, 0.1);
  color: var(--primary-color);
  border-color: rgba(220, 38, 38, 0.2);
}

.dark-mode .mobile-menu-toggle.active {
  background: rgba(220, 38, 38, 0.15);
  color: #fca5a5;
  border-color: rgba(220, 38, 38, 0.3);
}

/* Mobile Menu */
.mobile-menu {
  position: fixed;
  top: 75px;
  right: -100%;
  width: 320px;
  max-width: 85vw;
  height: calc(100vh - 75px);
  background: var(--bg-primary);
  box-shadow: var(--shadow-lg);
  transition: right 0.3s ease;
  overflow-y: auto;
  z-index: 999;
  border-left: 1px solid var(--border-color);
}

.dark-mode .mobile-menu {
  border-left: 1px solid rgba(255, 255, 255, 0.1);
}

.mobile-menu.active {
  right: 0;
}

.mobile-menu-content {
  padding: 1.5rem;
  display: flex;
  flex-direction: column;
  gap: 1.5rem;
}

/* Mobile Menu Overlay */
.mobile-menu-overlay {
  position: fixed;
  top: 75px;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  backdrop-filter: blur(2px);
  z-index: 998;
  animation: fadeIn 0.3s ease;
}

@keyframes fadeIn {
  from { opacity: 0; }
  to { opacity: 1; }
}

/* Mobile Nav Sections */
.mobile-nav-section {
  display: flex;
  flex-direction: column;
  gap: 0.5rem;
  padding-bottom: 1rem;
  border-bottom: 1px solid var(--border-color);
}

.mobile-nav-section:last-child {
  border-bottom: none;
  padding-bottom: 0;
}

.mobile-section-title {
  font-size: 0.75rem;
  font-weight: 700;
  text-transform: uppercase;
  color: var(--text-tertiary);
  letter-spacing: 0.5px;
  margin-bottom: 0.5rem;
  transition: color 0.3s ease;
}

.mobile-nav-link {
  display: flex;
  align-items: center;
  gap: 0.75rem;
  padding: 0.875rem 1rem;
  border-radius: 8px;
  text-decoration: none;
  color: var(--text-primary);
  font-weight: 500;
  font-size: 0.95rem;
  transition: all 0.2s ease;
  background: rgba(0, 0, 0, 0.02);
}

.mobile-nav-link:hover {
  background: rgba(220, 38, 38, 0.08);
  color: var(--primary-color);
  transform: translateX(4px);
}

.dark-mode .mobile-nav-link {
  background: rgba(255, 255, 255, 0.03);
}

.dark-mode .mobile-nav-link:hover {
  background: rgba(220, 38, 38, 0.15);
  color: #fca5a5;
}

.mobile-nav-link.active {
  background: rgba(220, 38, 38, 0.1);
  color: var(--primary-color);
  font-weight: 600;
}

.dark-mode .mobile-nav-link.active {
  background: rgba(220, 38, 38, 0.2);
  color: #fca5a5;
}

/* Mobile Auth Section */
.mobile-auth-section {
  padding-top: 1rem;
  margin-top: auto;
}

/* Mobile Dark Mode Toggle */
.mobile-dark-mode-toggle {
  width: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 0.875rem 1rem;
  border: 1px solid var(--border-color);
  border-radius: 8px;
  background: var(--glass-bg);
  color: var(--text-primary);
  font-weight: 600;
  font-size: 0.95rem;
  cursor: pointer;
  transition: all 0.2s ease;
  margin-bottom: 1rem;
  box-shadow: var(--shadow);
}

.mobile-dark-mode-toggle:hover {
  background: var(--card-bg);
  border-color: var(--primary-color);
  color: var(--primary-color);
  transform: scale(1.02);
}

.mobile-user-profile {
  display: flex;
  align-items: center;
  gap: 0.75rem;
  padding: 1rem;
  border-radius: 10px;
  background: rgba(220, 38, 38, 0.05);
  text-decoration: none;
  margin-bottom: 1rem;
  transition: all 0.2s ease;
}

.mobile-user-profile:hover {
  background: rgba(220, 38, 38, 0.1);
  transform: scale(1.02);
}

.dark-mode .mobile-user-profile {
  background: rgba(220, 38, 38, 0.08);
}

.dark-mode .mobile-user-profile:hover {
  background: rgba(220, 38, 38, 0.15);
}

.btn-mobile-logout {
  width: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 0.5rem;
  padding: 0.875rem;
  border: 1px solid rgba(220, 38, 38, 0.2);
  border-radius: 8px;
  background: rgba(220, 38, 38, 0.1);
  color: var(--primary-color);
  font-weight: 600;
  font-size: 0.95rem;
  cursor: pointer;
  transition: all 0.2s ease;
}

.btn-mobile-logout:hover {
  background: rgba(220, 38, 38, 0.15);
  border-color: rgba(220, 38, 38, 0.3);
}

.dark-mode .btn-mobile-logout {
  background: rgba(220, 38, 38, 0.15);
  color: #fca5a5;
  border-color: rgba(220, 38, 38, 0.3);
}

.dark-mode .btn-mobile-logout:hover {
  background: rgba(220, 38, 38, 0.2);
  border-color: rgba(220, 38, 38, 0.4);
}

.mobile-auth-buttons {
  display: flex;
  flex-direction: column;
  gap: 0.75rem;
}

.mobile-auth-buttons .btn-nav {
  width: 100%;
  text-align: center;
  padding: 0.875rem;
}

/* Responsive Breakpoints */
@media (max-width: 1200px) {
  .nav-link span {
    display: none;
  }

  .navbar-links {
    gap: 0.125rem;
  }
}

@media (max-width: 1024px) {
  .navbar-menu {
    display: none;
  }

  .mobile-menu-toggle {
    display: flex;
  }
}

@media (max-width: 480px) {
  .navbar-container {
    padding: 0 1rem;
  }

  .logo-text {
    font-size: 1.25rem;
  }

  .logo-icon {
    width: 36px;
    height: 36px;
  }

  .mobile-menu {
    width: 100%;
    max-width: 100%;
  }
}

/* Buttons */
.btn-primary, .btn-secondary, .btn-danger, .btn-logout {
  padding: 0.5rem 1rem;
  border: none;
  border-radius: 0.375rem;
  cursor: pointer;
  font-weight: 500;
  transition: all 0.3s;
  text-decoration: none;
  display: inline-block;
}

.btn-primary {
  background: var(--primary-color);
  color: var(--white);
}

.btn-primary:hover {
  background: var(--secondary-color);
}

.btn-secondary {
  background: var(--text-light);
  color: var(--white);
}

.btn-secondary:hover {
  background: var(--text-dark);
}

.btn-danger {
  background: var(--danger-color);
  color: var(--white);
}

.btn-block {
  width: 100%;
}

.btn-large {
  padding: 1rem 2rem;
  font-size: 1.125rem;
}

.btn-logout {
  background: transparent;
  color: var(--text-dark);
}

.btn-logout:hover {
  background: var(--light);
}

/* Footer */
.footer {
  background: var(--dark);
  color: var(--white);
  padding: 2rem 0;
  margin-top: 3rem;
}

.footer-content {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
  gap: 2rem;
  margin-bottom: 2rem;
}

.footer-section h3, .footer-section h4 {
  margin-bottom: 1rem;
}

.footer-section ul {
  list-style: none;
}

.footer-section a {
  color: var(--text-light);
  text-decoration: none;
}

.footer-bottom {
  text-align: center;
  padding-top: 1rem;
  border-top: 1px solid rgba(255, 255, 255, 0.1);
}

/* Home Page */
.hero {
  background: linear-gradient(135deg, var(--primary-color), var(--secondary-color));
  color: var(--white);
  padding: 4rem 0;
  text-align: center;
}

.hero h1 {
  font-size: 3rem;
  margin-bottom: 1rem;
}

.tagline {
  font-size: 1.25rem;
  margin-bottom: 2rem;
}

.hero-buttons {
  display: flex;
  gap: 1rem;
  justify-content: center;
}

.features, .stats, .cta {
  padding: 4rem 0;
}

.features h2, .stats h2, .cta h2 {
  text-align: center;
  font-size: 2rem;
  margin-bottom: 3rem;
}

.feature-grid, .stats-grid {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
  gap: 2rem;
}

.feature-card, .stat-card {
  background: var(--white);
  padding: 2rem;
  border-radius: 0.5rem;
  box-shadow: var(--shadow);
  text-align: center;
}

.feature-icon {
  font-size: 3rem;
  margin-bottom: 1rem;
}

.stat-card h3 {
  font-size: 2.5rem;
  color: var(--primary-color);
  margin-bottom: 0.5rem;
}

.cta {
  background: var(--light);
  text-align: center;
}

/* Forms */
.auth-page {
  min-height: calc(100vh - 70px);
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 2rem 0;
}

.auth-container {
  background: var(--white);
  padding: 2rem;
  border-radius: 0.5rem;
  box-shadow: var(--shadow-lg);
  width: 100%;
  max-width: 500px;
}

.auth-form {
  margin-top: 2rem;
}

.form-group {
  margin-bottom: 1rem;
}

.form-group label {
  display: block;
  margin-bottom: 0.5rem;
  font-weight: 500;
}

.form-group input,
.form-group select,
.form-group textarea {
  width: 100%;
  padding: 0.75rem;
  border: 1px solid var(--border-color);
  border-radius: 0.375rem;
  font-size: 1rem;
}

.form-row {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 1rem;
}

.error-message {
  background: #fee2e2;
  color: #991b1b;
  padding: 1rem;
  border-radius: 0.375rem;
  margin-bottom: 1rem;
}

.auth-footer {
  text-align: center;
  margin-top: 1rem;
}

.demo-credentials {
  margin-top: 2rem;
  padding: 1rem;
  background: var(--light);
  border-radius: 0.375rem;
  font-size: 0.875rem;
}

/* Dashboard */
.dashboard-page {
  padding: 2rem 0;
}

.dashboard-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 2rem;
}

.role-badge {
  background: var(--primary-color);
  color: var(--white);
  padding: 0.25rem 0.75rem;
  border-radius: 1rem;
  font-size: 0.875rem;
  display: inline-block;
}

.dashboard-stats {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
  gap: 1rem;
  margin-bottom: 2rem;
}

.stat-card {
  background: var(--white);
  padding: 1.5rem;
  border-radius: 0.5rem;
  box-shadow: var(--shadow);
}

.stat-value {
  font-size: 2rem;
  font-weight: bold;
  color: var(--primary-color);
}

.dashboard-section {
  background: var(--white);
  padding: 1.5rem;
  border-radius: 0.5rem;
  box-shadow: var(--shadow);
  margin-bottom: 2rem;
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 1rem;
}

.view-all {
  color: var(--primary-color);
  text-decoration: none;
  font-weight: 500;
}

.action-buttons {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(150px, 1fr));
  gap: 1rem;
}

.action-card {
  background: var(--white);
  border: 2px solid var(--border-color);
  padding: 1.5rem;
  border-radius: 0.5rem;
  text-align: center;
  text-decoration: none;
  color: var(--text-dark);
  transition: all 0.3s;
}

.action-card:hover {
  border-color: var(--primary-color);
  transform: translateY(-2px);
}

.action-card .icon {
  font-size: 2rem;
  display: block;
  margin-bottom: 0.5rem;
}

/* Cards */
.request-card, .donation-card, .donor-card, .event-card, .blog-card {
  background: var(--white);
  padding: 1.5rem;
  border-radius: 0.5rem;
  box-shadow: var(--shadow);
  margin-bottom: 1rem;
}

.request-card.critical {
  border-left: 4px solid #dc2626;
}

.request-card.urgent {
  border-left: 4px solid #ea580c;
}

.status-badge, .urgency-badge {
  padding: 0.25rem 0.75rem;
  border-radius: 1rem;
  font-size: 0.875rem;
  font-weight: 500;
  display: inline-block;
}

.status-badge.pending, .urgency-badge.normal {
  background: #fef3c7;
  color: #92400e;
}

.status-badge.matched, .urgency-badge.urgent {
  background: #fed7aa;
  color: #9a3412;
}

.status-badge.fulfilled, .status-badge.verified {
  background: #dcfce7;
  color: #166534;
}

.urgency-badge.critical {
  background: #fee2e2;
  color: #991b1b;
}

/* Grids */
.donor-grid, .blog-grid, .events-grid {
  display: grid;
  grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
  gap: 1.5rem;
  margin-top: 2rem;
}

/* Tables */
.leaderboard-table table {
  width: 100%;
  background: var(--white);
  border-radius: 0.5rem;
  overflow: hidden;
  box-shadow: var(--shadow);
}

.leaderboard-table th {
  background: var(--primary-color);
  color: var(--white);
  padding: 1rem;
  text-align: left;
}

.leaderboard-table td {
  padding: 1rem;
  border-bottom: 1px solid var(--border-color);
}

.leaderboard-table tr.top-rank {
  background: #fef3c7;
}

/* Notifications */
.notification-bell {
  position: relative;
}

.bell-button {
  background: none;
  border: none;
  font-size: 1.5rem;
  cursor: pointer;
  position: relative;
}

.badge {
  position: absolute;
  top: -5px;
  right: -5px;
  background: var(--danger-color);
  color: var(--white);
  border-radius: 50%;
  width: 18px;
  height: 18px;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 0.75rem;
}

.notification-dropdown {
  position: absolute;
  top: 100%;
  right: 0;
  width: 350px;
  background: var(--white);
  box-shadow: var(--shadow-lg);
  border-radius: 0.5rem;
  margin-top: 0.5rem;
  max-height: 400px;
  overflow-y: auto;
}

.notification-item {
  padding: 1rem;
  border-bottom: 1px solid var(--border-color);
  cursor: pointer;
}

.notification-item.unread {
  background: #eff6ff;
}

/* Loading */
.loading {
  text-align: center;
  padding: 3rem;
  font-size: 1.25rem;
  color: var(--text-light);
}

/* Admin Dashboard */
.admin-dashboard-page {
  padding: 2rem 0;
}

.admin-stats {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
  gap: 1.5rem;
  margin-bottom: 3rem;
}

.admin-section {
  background: var(--white);
  padding: 2rem;
  border-radius: 0.5rem;
  box-shadow: var(--shadow);
  margin-bottom: 2rem;
}

.admin-section h2 {
  margin-bottom: 1.5rem;
  color: var(--text-dark);
}

.pending-list {
  display: grid;
  gap: 1rem;
}

.pending-card {
  background: var(--light);
  padding: 1.5rem;
  border-radius: 0.5rem;
  border-left: 4px solid var(--warning-color);
}

.pending-card h4 {
  margin-bottom: 0.5rem;
  color: var(--text-dark);
}

.pending-card p {
  margin: 0.25rem 0;
  color: var(--text-light);
}

.pending-card .actions {
  display: flex;
  gap: 0.5rem;
  margin-top: 1rem;
}

.pending-card .actions button {
  padding: 0.5rem 1rem;
}

/* Responsive */
@media (max-width: 768px) {
  .nav-links {
    flex-direction: column;
    gap: 0.5rem;
  }

  .hero h1 {
    font-size: 2rem;
  }

  .form-row {
    grid-template-columns: 1fr;
  }

  .hero-buttons {
    flex-direction: column;
  }
}
