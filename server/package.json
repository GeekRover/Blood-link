    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.0.3",
    "multer": "^2.0.2",
    "qrcode": "^1.5.3",
    "socket.io": "^4.6.0",
    "validator": "^13.11.0"
  },
  "devDependencies": {
    "@types/jest": "^29.5.11",
